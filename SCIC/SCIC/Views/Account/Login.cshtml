@model SCIC.ViewModel.LoginViewModel
@{
    ViewData["Title"] = @ViewData["Title"];
    Layout = "_LayoutLogin";
}

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color:#00c2f3; font-size:2rem">  @localizer["Sign in To Skin Doctor"] </p>
                                <form asp-action="Login" asp-controller="Account" class="mx-1 mx-md-4" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Email" class="form-label"> @localizer["Email Address"] </label>
                                            <input asp-for="Email" class="form-control" autofocus required style="font-size:1.5rem" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Password" class="form-label"> @localizer["Password"]</label>
                                            <input asp-for="Password" class="form-control" required style="font-size:1.5rem" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mb-4">
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input me-4" />
                                        <label asp-for="RememberMe" class="form-check-label">
                                            @localizer["Remember Me ?"]
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-4 mb-lg-6">
                                        <button asp-action="Login" asp-controller="Account" type="submit" class="btn btn-primary p-3 w-50 fs-1"> @localizer["Login"] </button>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-4 mb-lg-6">
                                        <a asp-action="Register" asp-controller="Account" class="btn btn-info p-3 w-50 fs-1"> @localizer["Register"] </a>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="~/images/doctor-checking-patient.jpg" class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>